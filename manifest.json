{
  "name": "Hakrome Care",
  "version": "1.0.0",
  "description": "Some hack shortcuts on Chrome",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "cookies",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Hakrome",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/hakrome-16.png",
      "32": "images/hakrome-32.png",
      "48": "images/hakrome-48.png",
      "128": "images/hakrome-128.png"
    }
  },
  "icons": {
    "16": "images/hakrome-16.png",
    "32": "images/hakrome-32.png",
    "48": "images/hakrome-48.png",
    "128": "images/hakrome-128.png"
  },
  "manifest_version": 3
}
